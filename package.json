{
  "name": "analytics-recorder",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "files": [
    "dist"
  ],
  "main": "./dist/analytics-recorder.umd.cjs",
  "module": "./dist/analytics-recorder.js",
  "exports": {
    ".": {
      "import": "./dist/analytics-recorder.js",
      "require": "./dist/analytics-recorder.umd.cjs"
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "clean": "rm -rf node_modules dist",
    "format": "prettier --ignore-unknown",
    "format:check": "pnpm format --check .",
    "format:fix": "pnpm format --write",
    "format:fix-all": "pnpm format:fix .",
    "lint": "eslint",
    "lint:check": "pnpm lint .",
    "lint:fix": "pnpm lint --fix",
    "lint:fix-all": "pnpm lint:fix .",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:debug": "vitest --watch --threads false",
    "typecheck": "tsc",
    "validate": "npm-run-all --parallel lint:check format:check typecheck",
    "prepare": "is-ci || husky install"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "5.16.5",
    "@testing-library/react": "13.4.0",
    "@testing-library/user-event": "14.4.3",
    "@types/node": "18.11.17",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.9",
    "@types/testing-library__jest-dom": "5.14.5",
    "@typescript-eslint/eslint-plugin": "5.46.1",
    "@typescript-eslint/parser": "5.46.1",
    "@vitejs/plugin-react": "^3.0.0",
    "@vitest/coverage-c8": "0.26.2",
    "eslint": "8.29.0",
    "eslint-config-airbnb": "19.0.4",
    "eslint-config-airbnb-typescript": "17.0.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-import-resolver-typescript": "3.5.2",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-jest": "27.1.6",
    "eslint-plugin-jsx-a11y": "6.6.1",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-react": "7.31.11",
    "eslint-plugin-react-hooks": "4.6.0",
    "eslint-plugin-sonarjs": "0.17.0",
    "eslint-plugin-testing-library": "5.9.1",
    "happy-dom": "8.1.1",
    "husky": "^8.0.0",
    "is-ci": "3.0.1",
    "lint-staged": "13.1.0",
    "npm-run-all": "4.1.5",
    "prettier": "2.8.1",
    "typescript": "^4.9.4",
    "vite": "^4.0.1",
    "vite-plugin-dts": "1.7.1",
    "vitest": "0.26.2"
  }
}
